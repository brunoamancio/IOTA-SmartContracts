{
  "files.exclude": {
    "**/Cargo.lock": true,
    "**/LICENSE": true,
    "**/go.sum": true,
    "**/.git*": true,
    "*.md": true,

    "general-docs": true,
    "**/target/": true,
    "**/pkg/*.js": true,
    "**/pkg/*.ts": true,
    "**/pkg/package.json": true,
    "smartcontract/rust/wasp" : true
